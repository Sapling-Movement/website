{%- set home_url = languages[lang].prefix -%}
<header class="main-header">
  <div class="container">
    <div class="flex-wrap">
      <a
        href="{{- home_url -}}"
        class="logo"
      >
        {%- include 'logo.svg' -%}
      </a>
      <nav class="language-nav">
        {#- todo: implement language switcher -#}
        {#- <ul>
          {%- for lang_key, lang_data in languages -%}
            {%- for _page in allPages -%}
              {%- if (_page.data.lang === lang_key) and (_page.data.key === key) -%}
                <li>
                  {%- if page.url === _page.data.page.url -%}
                    {% set current_page = true -%}
                  {%- endif -%}
                  {%- if current_page -%}
                    <span class="as-a">
                  {%- else -%}
                    <a
                      rel="alternate"
                      hreflang="{{ lang_key }}"
                      href="{{ _page.data.page.url }}"
                    >
                  {%- endif -%}
                  {{- lang_key -}}
                  {%- if current_page -%}
                    </span>
                  {%- else -%}
                    </a>
                  {%- endif -%}
                </li>
              {%- endif -%}
            {%- endfor -%}
          {% endfor %}
        </ul> -#}
        <ul>
          <li><a href="/">DE</a></li>
          <li><a href="/en/">EN</a></li>
        </ul>
      </nav>
    </div>
    <nav class="main-nav">
      <ul class="reel">
        {%- for nav_item in navigation[lang].items -%}
          {%- set current_url = nav_item.pageBase.fullSlug -%}
          {%- if page.url === current_url -%}
            {%- set current_page = true -%}
          {%- else -%}
            {%- set current_page = false -%}
          {%- endif -%}
          <li>
            <a
              href="{{- current_url -}}"
              {%- if current_page %}aria-current="page"{% endif -%}
            >
              {{- nav_item.pageBase.title -}}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>
